		"sveltekit-search-params": "4.0.0-next.0",
		"tailwind-scrollbar": "^4.0.2",
		"thememirror": "^2.0.1",
		"yaml": "^2.8.2",
		"zenroom": "^5.28.11",
		"zod": "^4.3.5"
	}
}
