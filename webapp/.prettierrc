{
	"useTabs": true,
	"singleQuote": true,
	"trailingComma": "none",
	"printWidth": 100,
	"plugins": ["prettier-plugin-svelte", "prettier-plugin-tailwindcss", "perfectionist"],
	"rules": {
		"perfectionist/sort-imports": [
			"error",
			{
				"partitionByNewLine": true
			}
		]
	},
	"overrides": [
		{
			"files": "*.svelte",
			"options": {
				"parser": "svelte"
			}
		}
	]
}
